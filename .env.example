# Environment Configuration for Iqrah Backend

# PostgreSQL connection URL
DATABASE_URL=postgres://iqrah:iqrah@localhost:5432/iqrah

# JWT secret for token signing (generate a strong random string)
JWT_SECRET=change-me-in-production

# Path to store pack files
PACK_STORAGE_PATH=./packs

# Google OAuth client ID (optional for Phase 0)
GOOGLE_CLIENT_ID=

# Server bind address
BIND_ADDRESS=0.0.0.0:8080

# Public API base URL used for generated download URLs
BASE_URL=http://localhost:8080

# Shared admin key for observability/admin endpoints (empty disables)
ADMIN_API_KEY=

# Comma-separated Google OAuth subject allowlist for admin JWT role assignment
ADMIN_OAUTH_SUB_ALLOWLIST=
